<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.landmarksapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_foreground"
        android:supportsRtl="true"
        android:theme="@style/Theme.LandmarksApp">
        <activity
            android:name=".UploadPicture"
            android:exported="false"
            android:theme="@style/Theme.GetStarted" />
        <activity
            android:name=".ManualSearch"
            android:exported="false" />
        <activity
            android:name=".TakePicture"
            android:exported="false"
            android:theme="@style/Theme.GetStarted" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.GetStarted" />
        <activity
            android:name=".Login"
            android:theme="@style/Theme.GetStarted" />
        <activity
            android:name=".Register"
            android:exported="true"
            android:theme="@style/Theme.GetStarted">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GetStarted"
            android:exported="true"
            android:theme="@style/Theme.GetStarted">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>